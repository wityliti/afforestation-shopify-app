// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Shopify OAuth Session Storage
// Renamed with shopify_ prefix to avoid conflicts with main app tables
model ShopifySession {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?

  @@map("shopify_session")
}

// Shopify App Settings per Shop
model ShopifySettings {
  id           String   @id @default(cuid())
  shop         String   @unique
  triggerType  String   @default("fixed") // "fixed" per order or "threshold" per spend
  triggerValue Float    @default(1) // number of trees per order or threshold amount
  isEnabled    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relation to ShopifyShop
  shopifyShop ShopifyShop? @relation(fields: [shop], references: [shopDomain])

  @@map("shopify_settings")
}

// Shopify Shop Registry
// Tracks all shops that have installed the app with optional company linking
model ShopifyShop {
  id            Int       @id @default(autoincrement())
  shopDomain    String    @unique @map("shop_domain")
  shopName      String?   @map("shop_name")
  companyId     Int?      @map("company_id") // FK to main app's company_profiles table
  isActive      Boolean   @default(true) @map("is_active")
  installedAt   DateTime  @default(now()) @map("installed_at")
  uninstalledAt DateTime? @map("uninstalled_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relation to settings
  settings ShopifySettings?

  @@map("shopify_shops")
}

