// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Shopify OAuth Session Storage
// Renamed with shopify_ prefix to avoid conflicts with main app tables
model ShopifySession {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?

  @@map("shopify_session")
}

// Shopify App Settings per Shop
model ShopifySettings {
  id           String   @id @default(cuid())
  shop         String   @unique
  triggerType  String   @default("fixed") // "fixed" per order, "percentage" of order, "threshold" per spend
  triggerValue Float    @default(1) // number of trees, percentage, or threshold amount
  isEnabled    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Impact Type and Cost Settings
  impactType          String   @default("trees") @map("impact_type") // trees, carbon, both
  costPerTree         Float    @default(0.50) @map("cost_per_tree")
  costPerKgCo2        Float    @default(0.20) @map("cost_per_kg_co2")
  
  // Spending Limits and Controls
  monthlyLimit        Float?   @map("monthly_limit") // null = unlimited
  monthlySpent        Float    @default(0) @map("monthly_spent")
  isPaused            Boolean  @default(false) @map("is_paused")
  notifyOnLimit       Boolean  @default(true) @map("notify_on_limit")
  autoResumeMonthly   Boolean  @default(true) @map("auto_resume_monthly")

  // Widget Customization Settings
  widgetTheme         String  @default("light") @map("widget_theme") // light, dark, custom
  primaryColor        String  @default("#2d5a27") @map("primary_color")
  secondaryColor      String  @default("#4ade80") @map("secondary_color")
  backgroundColor     String  @default("#f0f9f0") @map("background_color")
  textColor           String  @default("#1a1a1a") @map("text_color")
  borderRadius        String  @default("rounded") @map("border_radius") // rounded, sharp, pill
  borderColor         String  @default("#d4edda") @map("border_color")
  fontFamily          String  @default("inherit") @map("font_family")
  showAnimation       Boolean @default(true) @map("show_animation")
  animationType       String  @default("pulse") @map("animation_type") // pulse, bounce, none
  treeEmoji           String  @default("ðŸŒ³") @map("tree_emoji")
  showTreeCount       Boolean @default(true) @map("show_tree_count")
  customMessage       String  @default("This purchase plants {count} tree{s}!") @map("custom_message")
  
  // Virtual Forest Settings
  forestTheme         String  @default("mixed") @map("forest_theme") // mixed, pine, deciduous, tropical
  forestBackground    String  @default("#fdfdfd") @map("forest_background")
  showCo2Stats        Boolean @default(true) @map("show_co2_stats")
  forestTitle         String  @default("Our Virtual Forest") @map("forest_title")
  forestSubtitle      String  @default("Watch our forest grow with every purchase") @map("forest_subtitle")

  // Relation to ShopifyShop
  shopifyShop ShopifyShop? @relation(fields: [shop], references: [shopDomain])

  @@map("shopify_settings")
}

// Shopify Shop Registry
// Tracks all shops that have installed the app with optional company linking
model ShopifyShop {
  id            Int       @id @default(autoincrement())
  shopDomain    String    @unique @map("shop_domain")
  shopName      String?   @map("shop_name")
  companyId     Int?      @map("company_id") // FK to main app's company_profiles table
  isActive      Boolean   @default(true) @map("is_active")
  installedAt   DateTime  @default(now()) @map("installed_at")
  uninstalledAt DateTime? @map("uninstalled_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relation to settings
  settings ShopifySettings?

  @@map("shopify_shops")
}

