{% comment %}
  Afforestation Virtual Forest Page
  A full-page section showcasing your store's environmental impact
  All visual settings are configurable in theme editor
{% endcomment %}

<!-- Flaticon UIcons CSS -->
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css'>

{% assign forest_emojis = "tree,leaf,tree,seedling" | split: "," %}
{% case block.settings.forest_theme %}
  {% when 'pine' %}
    {% assign forest_emojis = "tree,tree,leaf,tree" | split: "," %}
  {% when 'deciduous' %}
    {% assign forest_emojis = "tree,leaf,tree,leaf" | split: "," %}
  {% when 'tropical' %}
    {% assign forest_emojis = "tree,flower,leaf,tree" | split: "," %}
{% endcase %}

<div class="afforestation-impact-page" id="afforestation-forest-{{ block.id }}" style="
  --primary-color: {{ block.settings.primary_color }};
  --secondary-color: {{ block.settings.secondary_color }};
  --text-color: {{ block.settings.text_color }};
  --forest-bg: {{ block.settings.background_color }};
  --widget-bg: {{ block.settings.card_background }};
  --border-color: {{ block.settings.border_color }};
">
  <div class="page-header">
    <h1>{{ block.settings.title }}</h1>
    <p>{{ block.settings.subtitle }}</p>
  </div>

  <div class="impact-stats">
    <div class="stat-card">
      <div class="stat-icon"><i class="fi fi-rr-tree"></i></div>
      <div class="stat-value" id="forest-trees-count-{{ block.id }}">
        <span class="loading-skeleton"></span>
      </div>
      <div class="stat-label">{{ block.settings.trees_label }}</div>
    </div>
    {% if block.settings.show_co2 %}
    <div class="stat-card stat-co2">
      <div class="stat-icon stat-icon-co2"><i class="fi fi-rr-cloud"></i></div>
      <div class="stat-value" id="forest-co2-count-{{ block.id }}">
        <span class="loading-skeleton"></span>
      </div>
      <div class="stat-label">{{ block.settings.co2_label }}</div>
    </div>
    {% endif %}
    {% if block.settings.show_orders %}
    <div class="stat-card">
      <div class="stat-icon stat-icon-orders"><i class="fi fi-rr-shopping-cart"></i></div>
      <div class="stat-value" id="forest-orders-count-{{ block.id }}">
        <span class="loading-skeleton"></span>
      </div>
      <div class="stat-label">{{ block.settings.orders_label }}</div>
    </div>
    {% endif %}
  </div>

  {% if block.settings.show_forest %}
  <div class="virtual-forest">
    <h2>{{ block.settings.forest_title }}</h2>
    <div class="forest-grid" id="forest-grid-{{ block.id }}">
      <div class="forest-loading">Growing trees...</div>
    </div>
    <p class="forest-note" id="forest-note-{{ block.id }}"></p>
  </div>
  {% endif %}
  
  {% if block.settings.show_cta %}
  <div class="impact-cta">
    <p>{{ block.settings.cta_text }}</p>
    <a href="{{ block.settings.cta_link }}" class="cta-link">
      {{ block.settings.cta_button }} →
    </a>
  </div>
  {% endif %}
</div>

<script>
  (function() {
    const blockId = '{{ block.id }}';
    const treesEl = document.getElementById('forest-trees-count-' + blockId);
    const co2El = document.getElementById('forest-co2-count-' + blockId);
    const ordersEl = document.getElementById('forest-orders-count-' + blockId);
    const forestGrid = document.getElementById('forest-grid-' + blockId);
    const noteEl = document.getElementById('forest-note-' + blockId);

    const forestEmojis = {{ forest_emojis | json }};

    function animateCount(element, target, duration = 1500) {
      if (!element) return;
      const start = 0;
      const startTime = performance.now();
      
      function update(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        const easeOut = 1 - Math.pow(1 - progress, 3);
        const current = Math.floor(start + (target - start) * easeOut);
        element.textContent = current.toLocaleString();
        
        if (progress < 1) {
          requestAnimationFrame(update);
        }
      }
      
      requestAnimationFrame(update);
    }

    async function loadData() {
      try {
        const response = await fetch('/apps/afforestation/impact');
        if (!response.ok) throw new Error('Failed to fetch');
        
        const data = await response.json();
        
        // Animate stats
        animateCount(treesEl, data.treesPlanted || 0);
        if (co2El) animateCount(co2El, Math.round(data.co2Offset) || 0);
        if (ordersEl) animateCount(ordersEl, data.ordersContributing || 0);
        
        // Render forest
        const treesToShow = Math.min(data.treesPlanted || 0, 100);
        
        forestGrid.innerHTML = '';
        
        if (treesToShow === 0) {
          forestGrid.innerHTML = '<div class="empty-forest"><i class="fi fi-rr-seedling"></i> Plant the first tree with your purchase!</div>';
        } else {
          for (let i = 0; i < treesToShow; i++) {
            const tree = document.createElement('i');
            tree.className = 'fi fi-rr-' + forestEmojis[i % forestEmojis.length] + ' forest-tree';
            tree.style.animationDelay = (i * 30) + 'ms';
            forestGrid.appendChild(tree);
          }
          
          if (data.treesPlanted > 100) {
            noteEl.textContent = '...and ' + (data.treesPlanted - 100).toLocaleString() + ' more trees growing around the world!';
          }
        }
        
      } catch (error) {
        if (treesEl) treesEl.textContent = '0';
        if (co2El) co2El.textContent = '0';
        if (ordersEl) ordersEl.textContent = '0';
        forestGrid.innerHTML = '<div class="empty-forest"><i class="fi fi-rr-seedling"></i> Be the first to plant a tree!</div>';
      }
    }
    
    // Start loading when visible
    const observer = new IntersectionObserver((entries) => {
      if (entries[0].isIntersecting) {
        loadData();
        observer.disconnect();
      }
    }, { threshold: 0.1 });
    
    observer.observe(document.getElementById('afforestation-forest-' + blockId));
  })();
</script>

