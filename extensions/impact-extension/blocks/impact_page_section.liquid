    font-size: clamp(32px, 4vw, 42px);
    font-weight: 700;
    color: var(--primary-color);
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .afforestation-impact-page .stat-co2 .stat-value {
    color: var(--secondary-color);
  }
  
  .afforestation-impact-page .stat-label {
    color: var(--text-color);
    opacity: 0.7;
    margin-top: 8px;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
