<style>
  .afforestation-impact-page {
    --primary-color: #2d5a27;
    --secondary-color: #4ade80;
    --text-color: #1a1a1a;
    --forest-bg: #fdfdfd;
    --widget-bg: #f8fcf8;
    --border-color: #e0eee0;
    
    width: 100vw;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    margin: 60px 0;
    padding: 0 20px;
    box-sizing: border-box;
    text-align: center;
    color: var(--text-color);
  }
  
  .afforestation-impact-page .page-header h1 {
    font-size: clamp(28px, 5vw, 42px);
    color: var(--primary-color);
    margin-bottom: 12px;
    font-weight: 700;
  }
  
  .afforestation-impact-page .page-header p {
    font-size: 18px;
    color: var(--text-color);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 1.6;
  }
  
  .afforestation-impact-page .impact-stats {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 24px;
    margin: 40px 0;
  }
  
  .afforestation-impact-page .stat-card {
    background: var(--widget-bg);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 32px 40px;
    min-width: 180px;
    transition: all 0.3s ease;
  }
  
  .afforestation-impact-page .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
  }
  
  .afforestation-impact-page .stat-icon {
    font-size: 48px;
    margin-bottom: 12px;
    color: var(--primary-color);
  }
  
  .afforestation-impact-page .stat-icon-co2 {
    color: var(--secondary-color);
  }
  
  .afforestation-impact-page .stat-icon-orders {
    color: #8b5cf6;
  }
  
  .afforestation-impact-page .stat-value {
    font-size: clamp(32px, 4vw, 42px);
    font-weight: 700;
    color: var(--primary-color);
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .afforestation-impact-page .stat-co2 .stat-value {
    color: var(--secondary-color);
  }
  
  .afforestation-impact-page .stat-label {
    color: var(--text-color);
    opacity: 0.7;
    margin-top: 8px;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .afforestation-impact-page .loading-skeleton {
    display: block;
    width: 80px;
    height: 40px;
    background: linear-gradient(90deg, #eee 25%, #f5f5f5 50%, #eee 75%);
    background-size: 200% 100%;
    animation: skeleton-loading 1.5s infinite;
    border-radius: 8px;
    margin: 0 auto;
  }
  
  @keyframes skeleton-loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }
  
  .afforestation-impact-page .virtual-forest {
    margin-top: 60px;
  }
  
  .afforestation-impact-page .virtual-forest h2 {
    font-size: 24px;
    color: var(--primary-color);
    margin-bottom: 24px;
  }
  
  .afforestation-impact-page .forest-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
    padding: 32px;
    background: var(--forest-bg);
    border-radius: 20px;
    min-height: 120px;
    align-items: center;
  }
  
  .afforestation-impact-page .forest-tree {
    font-size: 28px;
    display: inline-block;
    animation: tree-grow 0.5s ease-out forwards;
    opacity: 0;
    transform: scale(0);
  }
  
  @keyframes tree-grow {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .afforestation-impact-page .forest-loading,
  .afforestation-impact-page .empty-forest {
    color: var(--text-color);
    opacity: 0.6;
    font-size: 16px;
    padding: 20px;
  }
  
  .afforestation-impact-page .forest-note {
    margin-top: 16px;
    color: var(--primary-color);
    font-size: 14px;
    font-style: italic;
  }
  
  .afforestation-impact-page .impact-cta {
    margin-top: 60px;
    padding: 32px;
    background: linear-gradient(135deg, var(--widget-bg) 0%, rgba(255,255,255,0.8) 100%);
    border-radius: 16px;
    border: 1px solid var(--border-color);
  }
  
  .afforestation-impact-page .impact-cta p {
    font-size: 18px;
    margin-bottom: 16px;
    color: var(--text-color);
  }
  
  .afforestation-impact-page .cta-link {
    display: inline-block;
    color: var(--primary-color);
    font-weight: 600;
    text-decoration: none;
    padding: 12px 24px;
    border: 2px solid var(--primary-color);
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .afforestation-impact-page .cta-link:hover {
    background: var(--primary-color);
    color: white;
  }
  
  @media (max-width: 768px) {
    .afforestation-impact-page {
      margin: 40px auto;
    }
    
    .afforestation-impact-page .impact-stats {
      gap: 16px;
    }
    
    .afforestation-impact-page .stat-card {
      padding: 24px 28px;
      min-width: 140px;
    }
    
    .afforestation-impact-page .stat-icon {
      font-size: 36px;
    }
    
    .afforestation-impact-page .forest-tree {
      font-size: 24px;
    }
  }
</style>
