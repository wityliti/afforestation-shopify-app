    <p id="forest-subtitle-{{ block.id }}">We are committed to a greener future. Every purchase you make helps us plant trees and offset carbon.</p>
  </div>

  <div class="impact-stats">
    <div class="stat-card" id="stat-trees-{{ block.id }}">
      <div class="stat-icon">ðŸŒ³</div>
      <div class="stat-value" id="forest-trees-count-{{ block.id }}">
        <span class="loading-skeleton"></span>
      </div>
      <div class="stat-label">Trees Planted</div>
    </div>
    <div class="stat-card stat-co2" id="stat-co2-{{ block.id }}">
      <div class="stat-icon">ðŸ’¨</div>
      <div class="stat-value" id="forest-co2-count-{{ block.id }}">
        <span class="loading-skeleton"></span>
      </div>
      <div class="stat-label">kg of COâ‚‚ Offset</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">ðŸ›’</div>
      <div class="stat-value" id="forest-orders-count-{{ block.id }}">
        <span class="loading-skeleton"></span>
      </div>
      <div class="stat-label">Orders Contributing</div>
    </div>
  </div>

  <div class="virtual-forest">
    <h2>ðŸŒ² Our Virtual Forest ðŸŒ²</h2>
    <div class="forest-grid" id="forest-grid-{{ block.id }}">
      <div class="forest-loading">Growing trees...</div>
    </div>
