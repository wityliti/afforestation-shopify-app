    </a>
  </div>
</div>

<script>
  (function() {
    const blockId = '{{ block.id }}';
    const container = document.getElementById('afforestation-forest-' + blockId);
    const treesEl = document.getElementById('forest-trees-count-' + blockId);
    const co2El = document.getElementById('forest-co2-count-' + blockId);
    const ordersEl = document.getElementById('forest-orders-count-' + blockId);
    const forestGrid = document.getElementById('forest-grid-' + blockId);
    const titleEl = document.getElementById('forest-title-' + blockId);
    const subtitleEl = document.getElementById('forest-subtitle-' + blockId);
    const noteEl = document.getElementById('forest-note-' + blockId);
    const statTrees = document.getElementById('stat-trees-' + blockId);
    const statCo2 = document.getElementById('stat-co2-' + blockId);

    function animateCount(element, target, duration = 1500) {
      const start = 0;
      const startTime = performance.now();
      
      function update(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        const easeOut = 1 - Math.pow(1 - progress, 3);
        const current = Math.floor(start + (target - start) * easeOut);
        element.textContent = current.toLocaleString();
        
        if (progress < 1) {
          requestAnimationFrame(update);
        }
      }
      
      requestAnimationFrame(update);
    }

    async function loadData() {
      try {
        const response = await fetch('/apps/afforestation/impact');
        if (!response.ok) throw new Error('Failed to fetch');
        
        const data = await response.json();
        const s = data.settings || {};
        
        // Apply styling from settings
        container.style.setProperty('--primary-color', s.primaryColor || '#2d5a27');
        container.style.setProperty('--secondary-color', s.secondaryColor || '#4ade80');
        container.style.setProperty('--text-color', s.textColor || '#1a1a1a');
        container.style.setProperty('--forest-bg', s.forestBackground || '#fdfdfd');
        container.style.setProperty('--widget-bg', s.backgroundColor || '#f8fcf8');
        container.style.setProperty('--border-color', s.borderColor || '#e0eee0');
        
        // Apply font
        if (s.fontFamily && s.fontFamily !== 'inherit') {
          container.style.fontFamily = s.fontFamily;
        }
        
        // Update titles
        if (s.forestTitle) titleEl.textContent = s.forestTitle;
        if (s.forestSubtitle) subtitleEl.textContent = s.forestSubtitle;
        
        // Hide CO2 stats if disabled
        if (!s.showCo2Stats) {
          statCo2.style.display = 'none';
        }
        
        // Animate stats
        animateCount(treesEl, data.treesPlanted || 0);
        animateCount(co2El, Math.round(data.co2Offset) || 0);
        animateCount(ordersEl, data.ordersContributing || 0);
        
        // Render forest with theme
        const forestEmojis = s.forestEmojis || ['ðŸŒ³', 'ðŸŒ²', 'ðŸŒ´', 'ðŸŒ¿'];
        const treesToShow = Math.min(data.treesPlanted || 0, 100);
        
        forestGrid.innerHTML = '';
        
        if (treesToShow === 0) {
          forestGrid.innerHTML = '<div class="empty-forest">ðŸŒ± Plant the first tree with your purchase!</div>';
        } else {
          for (let i = 0; i < treesToShow; i++) {
            const tree = document.createElement('span');
            tree.className = 'forest-tree';
            tree.textContent = forestEmojis[i % forestEmojis.length];
            tree.style.animationDelay = (i * 30) + 'ms';
            forestGrid.appendChild(tree);
          }
          
          if (data.treesPlanted > 100) {
            noteEl.textContent = '...and ' + (data.treesPlanted - 100).toLocaleString() + ' more trees growing around the world!';
          }
        }
        
      } catch (error) {
        treesEl.textContent = '0';
        co2El.textContent = '0';
        ordersEl.textContent = '0';
        forestGrid.innerHTML = '<div class="empty-forest">ðŸŒ± Be the first to plant a tree!</div>';
        console.warn('Afforestation: Could not load impact data', error);
      }
    }
    
    // Start loading when visible
    const observer = new IntersectionObserver((entries) => {
      if (entries[0].isIntersecting) {
        loadData();
        observer.disconnect();
      }
    }, { threshold: 0.1 });
    
    observer.observe(container);
  })();
</script>

